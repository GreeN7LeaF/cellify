@model List<Cellphone.Models.SanPham>


@foreach (var item in Model)
{
<div class="col-lg-4 col-xl-3 col-md-6 col-sm-6 col-xs-6 mb-30px">
    <!-- Single Product -->
    <input type="hidden" class="productId" name="productId" value="@item.ID" />
    <div class="product">
        <div class="thumb">
            <a href="@Url.Action("Details", "SanPham", new { ID = @item.ID})" class="image">
                <img src="@Url.Content("~/Images/Product/" + @item.HinhAnh)" alt="Product" />
                <img class="hover-image" src="@Url.Content("~/Images/Product/" + @item.HinhAnh)"
                     alt="Product" />
            </a>
            <span class="badges">
                <span class="new">New</span>
            </span>
            <div class="actions">
                <a href="wishlist.html" class="action wishlist" title="Wishlist">
                    <i class="pe-7s-like"></i>
                </a>
                <a href="#" class="action quickview" data-link-action="quickview"
                   title="Quick view" data-bs-toggle="modal"
                   data-bs-target="#exampleModal"><i class="pe-7s-look"></i></a>
                <a href="compare.html" class="action compare" title="Compare">
                    <i class="pe-7s-refresh-2"></i>
                </a>
            </div>
        </div>
        <div class="content">
            <span class="ratings">
                <span class="rating-wrap">
                    <span class="star" style="width: 100%"></span>
                </span>
                <span class="rating-num">( 5 Review )</span>
            </span>
            <h5 class="title">
                <a href="single-product.html">
                    @item.TenSP
                </a>
            </h5>
            <span class="price">
                <span class="new">@item.GiaBan</span>
            </span>
        </div>
        <button title="Add To Cart" class="add-to-cart" onclick="addToCart(@item.ID)">
            Thêm giỏ hàng
        </button>
    </div>
    <script>
        function addToCart(productId) {
            $.ajax({
                url: '/CTGioHangs/Create',
                type: 'POST',
                data: { ID: productId },
                success: function (result) {
                    // Xử lý kết quả trả về ở đây
                    alert('Sản phẩm đã được thêm vào giỏ hàng thành công');
                },
                error: function () {
                    alert('Đã có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng');
                }
            });
        }
    </script>
</div>
}


