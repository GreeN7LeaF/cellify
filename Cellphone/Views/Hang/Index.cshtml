@model IEnumerable<Cellphone.Models.Hang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<!-- search brand -->
<div id="searchBrand"
     class="add-inline-form main-content rounded-3 border border-2 py-4 px-3 mb-3">
    <div class="table-header mb-3 row">
        <div class="col">
            <h5 class="title">Tìm kiếm hãng</h5>
        </div>
        <div class="col-1">
            <button class="btn btn-clr-normal"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#searchCollapse"
                    aria-expanded="false"
                    aria-controls="searchCollapse">
                <i class="fa-solid fa-caret-down"></i>
            </button>
        </div>
    </div>
    <form id="searchCollapse" class="collapse create-form">

        @using (Html.BeginForm("Index", "Hang", FormMethod.Get))
        {
            <div class="row">
                <div class="col">
                    <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control" />
                    <label class="form-label" for="form6Example3">Tên hãng</label>
                </div>
            </div>
            <!-- Submit button -->
            <div class="col-2 mt-4">
                <button id="searchBtn"
                        type="submit"
                        class="btn btn-clr-normal btn-block mb-4 w-50">
                    Tìm
                </button>
            </div>
        }
    </form>

</div>
<!-- brand List -->
<div class="main-content rounded-3 border border-2 py-4 px-3">
    <div class="table-header row">
        <div class="col-3">
            <h5 class="title">Danh mục hãng</h5>
            <p>sub title</p>
        </div>
        <div class="col text-end me-2">
            <button class="btn btn-clr-normal">
                @Html.ActionLink("Thêm", "Create", null, new { @class = "nav-link" })
            </button>
        </div>
    </div>
    <div class="text-white">
        <div class="bg-white">
            <table class="table align-middle mb-0">
                <thead class="">
                    <tr>
                        <th>Tên hãng</th>
                        <th>Liên hệ</th>
                        <th>Mail</th>
                        <th>Khác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @Html.DisplayFor(modelItem => item.TenHang)
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DienThoai)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Mail)</td>
                            <td>
                                <div class="d-flex flex-row gap-1">
                                    <a href="@Url.Action("Edit", "Hang", new {id=item.ID})" class="nav-link">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Hang", new {id=item.ID})" class="nav-link">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
            </table>
        </div>
    </div>
</div>

