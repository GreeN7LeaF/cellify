@model IEnumerable<Cellphone.Models.SanPham>

@{
    ViewBag.Title = "Index";
    var ID = HttpContext.Current.Session["ID"];
}


<!-- OffCanvas Menu End -->
<!-- Hero/Intro Slider Start -->
<div class="section bg-color1 ptb-30px slider-banner">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12">
                <div class="hero-slider swiper-container slider-nav-style-1 slider-dot-style-1">
                    <!-- Hero slider Active -->
                    <div class="swiper-wrapper">
                        @if (ViewBag.HomeSlider != null)
                        {
                            foreach (var item in ViewBag.HomeSlider)
                            {
                                <!-- Single slider item -->
                                <div class="hero-slide-item slider-height-2 swiper-slide d-flex"
                                     data-bg-image="@Url.Content("~/Images/Banner/" + @item.HinhAnh)">
                                    <div class="hero-slide-content hero-slide-content-2 slider-animated-1 slider-animated-2 text-start align-self-center pl-80px">
                                        <span class="category">@item.NoiDung</span>
                                        <h2 class="title-1">Handmade <br> Shop Co.</h2>
                                        <a href="shop-left-sidebar.html" class="btn btn-primary text-uppercase">Shop Now</a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <!-- Add Pagination -->
                    <div class="swiper-pagination swiper-pagination-white"></div>
                    <!-- Add Arrows -->
                    <div class="swiper-buttons">
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 responsive-flex">
                @if (ViewBag.HomeSub != null)
                {
                    foreach (var item in ViewBag.HomeSub)
                    {
                        <div class="single-banner mt-25px">
                            <img src="@Url.Content("~/Images/Banner/" + @item.HinhAnh)" alt="">
                            <div class="banner-content">
                                <span class="category">Bán chạy nhất</span>
                                <span class="title">
                                    @item.NoiDung
                                </span>
                                <a href="shop-left-sidebar.html" class="shop-link btn btn-primary text-uppercase">
                                    Mua ngay
                                </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Hero/Intro Slider End -->
    <!-- Feature Area Srart -->
    <div class="feature-area pt-100px">
        <div class="container">
            <div class="feature-wrapper">
                <div class="single-feture-col">
                    <!-- single item -->
                    <div class="single-feature">
                        <div class="feature-icon">
                            <img src="~/Template/images/icons/1.png" alt="">
                        </div>
                        <div class="feature-content">
                            <h4 class="title">Miễn phí vận chuyển</h4>
                            <span class="sub-title">Với đơn hàng trên 5 triệu</span>
                        </div>
                    </div>
                </div>
                <!-- single item -->
                <div class="single-feture-col ">
                    <div class="single-feature">
                        <div class="feature-icon">
                            <img src="~/Template/images/icons/2.png" alt="">
                        </div>
                        <div class="feature-content">
                            <h4 class="title">Thanh toán Online</h4>
                            <span class="sub-title">Tiết kiệm với những ưu đãi hấp dẫn</span>
                        </div>
                    </div>
                </div>
                <!-- single item -->
                <div class="single-feture-col">
                    <div class="single-feature">
                        <div class="feature-icon">
                            <img src="~/Template/images/icons/3.png" alt="">
                        </div>
                        <div class="feature-content">
                            <h4 class="title">Đổi trả hoàn toàn</h4>
                            <span class="sub-title">Trong vòng 1 tuần, đổi trả hoàn toàn</span>
                        </div>
                    </div>
                    <!-- single item -->
                </div>
            </div>
        </div>
    </div>
    <!-- Feature Area End -->
    <!-- Product Area Start -->
    <div class="product-area pt-100px">
        <div class="container">
            <!-- Section Title & Tab Start -->
            <div class="row">
                <!-- Section Title Start -->
                <div class="col-12">
                    <div class="section-title text-center mb-60px">
                        <h2 class="title">Sản phẩm bán chạy</h2>
                    </div>
                    <!-- Tab Start -->
                    <div class="tab-slider nav-center nav-center-2">
                        <ul class="best-product-tab-nav product-tab-nav nav justify-content-center align-items-center">
                            @if (ViewBag.LoaiSP != null)
                            {
                                foreach (var item in ViewBag.LoaiSP)
                                {
                                    <li id=@item.ID class="nav-item">
                                        <a class="nav-link" data-bs-toggle="tab"
                                           href="#tab-fabric-2"><span>@item.TenLoai</span></a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <!-- Tab End -->
                </div>
                <!-- Section Title End -->

            </div>
            <!-- Section Title & Tab End -->

            <div class="row">
                <div class="col">
                    <div class="tab-content mt-60px">
                        <!-- 1st tab start -->
                        <div class="tab-pane fade show active" id="tab-fabric-2">
                            <div id="productTabContainer" class="row">
                                @*chỗ này nó tự động render theo tabs, và lấy dữ liệu từ PP_SanPhamCart*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Product Area End -->
    <!-- Testimonial Area Start -->
    <div class="banner-area-3 pt-100px pb-100px">
        <div class="container">
            <div class="row">
                @if (ViewBag.BannerSub1 != null)
                {

                    foreach (var item in ViewBag.BannerSub1)
                    {
                        <div class="col-lg-6 mb-lm-30px mb-md-30px">
                            <div class="single-banner">
                                <img src="@Url.Content("~/Images/Banner/" + @item.HinhAnh)" alt="">
                                <div class="banner-content">
                                    <span class="category">-20%</span>
                                    <span class="title">
                                        @item.NoiDung
                                    </span>
                                    <a href="shop-left-sidebar.html" class="shop-link btn btn-primary text-uppercase">
                                        Mua ngay
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <!-- Testimonial Area End -->
    <!-- Product Area Start -->
    <div class="product-area">
        <div class="container">
            <!-- Section Title & Tab Start -->
            <div class="row">
                <!-- Section Title Start -->
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">Danh mục</h2>
                    </div>
                    <!-- Tab Start -->
                    <div class="tab-slider swiper-container slider-nav-style-1 small-nav">
                        <ul class="product-list product-tab-nav nav swiper-wrapper ">
                            @if (ViewBag.LoaiSP != null)
                            {
                                foreach (var item in ViewBag.LoaiSP)
                                {
                                    <li id="tab-@item.ID" class="nav-item swiper-slide">
                                        <a class="nav-link" data-bs-toggle="tab"
                                           href="#tab-jewelry">
                                            <img src="~/Template/images/icons/jewelry-icon.png"
                                                 alt=""><span>@item.TenLoai</span>
                                            </a>
                                        </li>
                                    }
                                }
                        </ul>
                        <!-- Add Arrows -->
                        <div class="swiper-buttons">
                            <div class="swiper-button-next"></div>
                            <div class="swiper-button-prev"></div>
                        </div>
                    </div>
                    <!-- Tab End -->
                </div>
                <!-- Section Title End -->

            </div>
            <!-- Section Title & Tab End -->

            <div class="row">
                <div class="col">
                    <div class="tab-content mt-60px">
                        <div class="tab-pane fade show active" id="tab-fabric-2">
                            <div id="productListContainer" class="row">
                                @*chỗ này nó tự động render theo tabs, và lấy dữ liệu từ PP_SanPhamCart*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Product Area End -->
    <!-- Banner Area Start -->
    <div class="banner-area">
        <div class="container">
            <div class="row">
                @if (ViewBag.BannerSub2 != null)
                {
                    var count = 1;
                    foreach (var item in ViewBag.BannerSub2)
                    {
                        if (count == 2)
                        {
                            <div class="single-col center-col">
                                <div class="single-banner">
                                    <img src="@Url.Content("~/Images/Banner/" + @item.HinhAnh)" alt="">
                                    <div class="banner-content">
                                        <span class="category">Best Seller</span>
                                        <span class="title">
                                            @item.NoiDung
                                        </span>
                                        <a href="shop-left-sidebar.html" class="shop-link btn btn-primary text-uppercase">
                                            Mua ngay
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="single-col">
                                <div class="single-banner">
                                    <img src="@Url.Content("~/Images/Banner/" + @item.HinhAnh)" alt="">
                                    <div class="banner-content">
                                        <span class="category">Best Seller</span>
                                        <span class="title">
                                            @item.NoiDung
                                        </span>
                                        <a href="shop-left-sidebar.html" class="shop-link btn btn-primary text-uppercase">
                                            Mua ngay
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        count += 1;
                    }
                }
            </div>
        </div>
    </div>
    <!-- Banner Area End -->
    <!-- Brand area start -->
    <div class="brand-area pt-100px">
        <div class="container">
            <div class="brand-slider swiper-container">
                <div class="swiper-wrapper align-items-center">
                    <div class="swiper-slide brand-slider-item text-center">
                        <a href="#"><img class=" img-fluid" src="~/Template/images/brand-logo/1.png" alt="" /></a>
                    </div>
                    <div class="swiper-slide brand-slider-item text-center">
                        <a href="#"><img class=" img-fluid" src="~/Template/images/brand-logo/2.png" alt="" /></a>
                    </div>
                    <div class="swiper-slide brand-slider-item text-center">
                        <a href="#"><img class=" img-fluid" src="~/Template/images/brand-logo/3.png" alt="" /></a>
                    </div>
                    <div class="swiper-slide brand-slider-item text-center">
                        <a href="#"><img class=" img-fluid" src="~/Template/images/brand-logo/4.png" alt="" /></a>
                    </div>
                    <div class="swiper-slide brand-slider-item text-center">
                        <a href="#"><img class=" img-fluid" src="~/Template/images/brand-logo/5.png" alt="" /></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Brand area end -->



