@model Cellphone.Models.Banner

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


<div class="breadcumb d-flex flex-row mb-3">
    @Html.ActionLink("Sản phẩm", "Index", null, new { @class = "bc-prev nav-link" })
    <a href="#" class="nav-link">Thêm banner</a>
</div>

<h3 class="title">Thêm banner</h3>
<p>Điền tất cả các mục *bắt buộc</p>
<div class="row create-form">
    <div class="col-8">
        @using (Html.BeginForm("Create", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.Ten, "Tên banner", htmlAttributes: new { @class = "form-label" })
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <div class="file-upload">
                                <div class="file-select">
                                    <div class="file-select-button" id="fileName">
                                        Chọn hình ảnh
                                    </div>
                                    <div class="file-select-name" id="noFile">
                                        Không có file nào...
                                    </div>
                                    <input type="file" id="HinhAnh" name="HinhAnh" onchange="previewImage(event)" />
                                </div>
                            </div>
                            
                        </div>
                    </div>

                </div>
            </div>

            <div class="form-outline mb-4">
                <textarea class="form-control"
                          id="NoiDung"
                          name="NoiDung"
                          rows="4"></textarea>
                <label class="form-label" for="NoiDung">Nội Dung</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-clr-normal btn-block mb-4">
                Thêm
            </button>
        }
    </div>
    <div class="col-3">
        <div class="form-outline mb-4">
            <div id="imagePreview" class=" default-img-wrapper">
                @*<img src="~/Images/default.jpg" alt="" />*@
            </div>
            <label class="form-label" for="form6Example4">Image</label>
        </div>
    </div>
    <script>
        function previewImage(event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var img = document.createElement("img");
                    img.src = e.target.result;
                    img.width = 200; // Thay đổi kích thước hình ảnh tại đây
                    var container = document.getElementById("imagePreview");
                    container.innerHTML = "";
                    container.appendChild(img);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
</div>
