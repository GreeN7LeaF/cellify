@model IEnumerable<Cellphone.Models.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="main-content rounded-3 border border-2 py-4 px-3">
    <div class="table-header row">
        <div class="col-5">
            <h5 class="title">Đơn hàng</h5>
            <p>sub title</p>
        </div>
    </div>
    <div class="text-white">
        <div class="bg-white">
            <table class="table align-middle mb-0">
                <thead class="">
                    <tr>
                        <th>ID</th>
                        <th>Ngày lập</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Khác </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @item.ID
                                    </div>
                                </td>
                                <td>
                                    @item.NgayLap
                                </td>
                                <td>
                                    @item.TongTien
                                </td>
                                <td>
                                    @if (item.TrangThai == null)
                                    {<span>Chưa xác nhận </span>}
                                    else
                                    { <span>@item.TrangThai </span>}
                                </td>
                                <td>
                                    <div class="d-flex flex-row gap-1">
                                        <a href="@Url.Action("Details", "DonHang", new {id=item.ID})" class="nav-link">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "DonHang", new {id=item.ID})" class="nav-link">
                                            Hủy
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <div>Không tìm thấy đơn hàng nào</div>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

