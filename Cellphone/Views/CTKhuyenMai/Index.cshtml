@model IEnumerable<Cellphone.Models.CTKhuyenMai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div style="margin: 10px; height: auto; width: 100%;">
 <h2 style="text-align: center">THÔNG TIN CHI TIẾT KHUYẾN MÃI</h2>

<p>
    @Html.ActionLink("TẠO MỚI", "Create", null, new
{
    @class = "btn btn-default"
})
</p>
<table class="table">
    <tr>
        <th>
            MÃ SẢN PHẨM
        </th>
        <th>
           MÃ KHÁCH HÀNG
        </th>
        <th>
           GIÁ
        </th>
        <th>
         SỐ LƯỢNG
        </th>
        <th>
           TRẠNG THÁI
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID } ,new
               {
                   @class = "btn btn-success"
               }) |
                @Html.ActionLink("chi tiết", "Details", new { id = item.ID } ,new
           { @class = "btn btn-info" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new
           { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
</div>
