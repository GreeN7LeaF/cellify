@model Cellphone.Models.KhuyenMai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="breadcumb d-flex flex-row mb-3">
    @Html.ActionLink("Khuyến Mãi", "Index", null, new { @class = "bc-prev nav-link" })
    <a href="#" class="nav-link">Chỉnh sửa khuyến mãi</a>
</div>
<div class="add-inline-form main-content rounded-3 border border-2 py-4 px-3 mb-3">
    <div class="table-header row">
        <div class="col-5">
            <h5 class="title">Chỉnh sửa thông tin khuyến mãi</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
        </div>
    </div>
    @using (Html.BeginForm("Edit", "KhuyenMai"))
    {
        @Html.AntiForgeryToken()
        <form class="create-form">

            <div class="row create-form">
                <div class="col-2">
                    <div class="form-control">
                        @Model.ID
                    </div>
                    <div class="form-label">ID</div>
                </div>
                <div class="col-8">
                    <div class="form-outline mb-4">
                        @Html.EditorFor(model => model.TenKM, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenKM, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.TenKM, "Tiêu đề", htmlAttributes: new { @class = "form-label " })
                    </div>
                </div>
                <div class="col-2">
                    @Html.DropDownList("customStatus", null, htmlAttributes: new { @class="select w-100"})
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.TrangThai, "Trạng thái", htmlAttributes: new { @class = "form-label " })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input type="datetime-local"
                           id="NgayBD"
                           name="NgayBD"
                           class="form-control" asp-for="DateTime"  asp-format="{0:yyyy-MM-ddTHH:mm}"/>
                    <label for="birthdaytime">Ngày bắt đầu</label>
                </div>
                <div class="col">
                    <input type="datetime-local"
                           id="NgayKT"
                           name="NgayKT"
                           class="form-control" asp-for="DateTime"  asp-format="{0:yyyy-MM-ddTHH:mm}"/>
                    <label for="birthdaytime">Ngày kết thúc</label>
                </div>
            </div>
            <div class="col-2 mt-4">
                <!-- Submit button -->
                <button type="submit"
                        class="btn btn-clr-normal btn-block mb-4 w-50">
                    Lưu
                </button>
            </div>
        </form>
     }
    </div>

<div id="addProductForm" class="main-content rounded-3 border border-2 py-4 px-3 mb-3 d-none">
    <div class="table-header row">
        <div class="col">
            <h5 class="title">Thêm sản phẩm</h5>
            <p>*Bắt buộc</p>
        </div>
    </div>
    @using (Html.BeginForm("Create", "SanPham"))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-11">
                <!-- Component -->
                <form class="create-form">
                    <div class="form-outline mb-4">
                        <input type="text"
                               id="form6Example3"
                               class="form-control" />
                        <label class="form-label" for="form6Example3">Tên sản phẩm</label>
                    </div>
                </form>
            </div>
        </div>
        <div class="col me-2">
            <div class="d-flex flex-row gap-1">
                <button id="removeAddProductForm" class="btn btn-clr-danger">
                    Hủy
                </button>
                <!-- Submit button -->
                <button type="submit" class="btn btn-clr-normal btn-block">
                    <a href="#" class="nav-link">Thêm</a>
                </button>
            </div>
        </div>
    }
    </div>

<div class="main-content rounded-3 border border-2 py-4 px-3">
    <div class="table-header row">
        <div class="col-5">
            <h5 class="title">Sản phẩm trong khuyến mãi</h5>
            <p>Product on sale</p>
        </div>
        <div class="col text-end me-2">
            <button id="addProduct" class="btn btn-clr-normal">
                Thêm
            </button>
        </div>
    </div>
    <div class="text-white">
        <div class="bg-white">
            <table class="table align-middle mb-0">
                <thead class="">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Loại sản phẩm</th>
                        <th>Hãng</th>
                        <th>Số lượng</th>
                        <th>Khác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.SanPham != null)
                    {
                        foreach (var item in ViewBag.SanPham)
                        {
                            //Chưa làm thêm sản phẩm vào khuyến mãi
                            <tr>
                                <td>
                                    @item.TenSP
                                </td>
                                <td>
                                    @item.LoaiSP
                                </td>
                                <td>
                                    @item.Hang
                                </td>
                                <td>
                                    @item.SoLuong
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "KhuyenMai", new { id = item.ID })" class="nav-link">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

