@model Cellphone.Models.KhuyenMai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


    <h2 style="text-align: center">CHỈNH SỬA KHUYẾN MÃI</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
           
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                TÊN KHUYẾN MÃI
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenKM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenKM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
              NGÀY BẮT ĐẦU
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayBD, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayBD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               NGÀY KẾT THÚC
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayKT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayKT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
              TRẠNG THÁI
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="LƯU" class="btn btn-clr-danger" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("TRỞ LẠI", "Khuyenmai")
    </div>
