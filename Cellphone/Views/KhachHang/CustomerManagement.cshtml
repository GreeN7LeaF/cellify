
@model IEnumerable<Cellphone.Models.KhachHang>
@using Cellphone.Models
@{
    ViewBag.Title = "CustomerManagement";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    mobiledbEntities1 database = new mobiledbEntities1();
}

@{
    var checkmess = (string)TempData["messageAlert"];
    var makh = (string)TempData["makhachhang"];
    if (checkmess == "SuaKH")
    {
        <script>
            swal({
                title: "Đã sửa thông tin khách hàng thành công",
                text: "Khách hàng @makh đã được sửa đổi mới",
                icon: "success",
                button: "OK",
            });
        </script>
    }
}
<!-- search brand -->
<div id="searchBrand"
     class="add-inline-form main-content rounded-3 border border-2 py-4 px-3 mb-3">
    <div class="table-header mb-3 row">
        <div class="col">
            <h5 class="title">Tìm kiếm khách hàng</h5>
        </div>
        <div class="col-1">
            <button class="btn btn-clr-normal"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#searchCollapse"
                    aria-expanded="false"
                    aria-controls="searchCollapse">
                <i class="fa-solid fa-caret-down"></i>
            </button>
        </div>
    </div>
    <form id="searchCollapse" class="collapse create-form">
        <div class="row">
            <div class="col">
                <input type="text"
                       id="form6Example3"
                       class="form-control" />
                <label class="form-label" for="form6Example3">Tên khách hàng</label>
            </div>
        </div>
        <!-- Submit button -->
        <div class="col-2 mt-4">
            <button id="searchBtn"
                    type="submit"
                    class="btn btn-clr-normal btn-block mb-4 w-50">
                <i>Tìm</i>
            </button>
        </div>
    </form>
</div>
<!-- brand List -->
<div class="main-content rounded-3 border border-2 py-4 px-3">
    <div class="table-header row">
        <div class="col-3">
            <h5 class="title">Quản lý khách hàng</h5>
            <p>sub title</p>
        </div>
    </div>
    <div class="text-white">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Customer
        </div>
        <div class="bg-white">
            <table class="table align-middle mb-0">
                <thead>
                    @*//Phần render*@
                    <tr>
                        <th>Loại</th>
                        <th>Họ và tên</th>
                        <th>Giới tính</th>
                        <th>Địa chỉ</th>

                    </tr>
                </thead>
                <tbody>
                    @{ 
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LoaiKH</td>
                                <td>@item.HoTen</td>
                                <td>@item.GioiTinh</td>
                                <td>@item.DiaChi</td>
                                <td>
                                    <div class="d-flex flex-row gap-1">
                                        <a href="@Url.Action("Edit", "KhachHang", new {id=item.ID})" class="nav-link">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        
                                    </div>
                                </td>
                                @*<td>
                                        <a href="~/NhanVien/DetailCus/@item.HoTen" class="btn btn-info btn-sm edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    </td>*@
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


