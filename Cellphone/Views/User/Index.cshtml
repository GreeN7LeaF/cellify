@model IEnumerable<Cellphone.Models.User_KhachHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<!-- search brand -->
<div id="searchBrand"
     class="add-inline-form main-content rounded-3 border border-2 py-4 px-3 mb-3">
    <div class="table-header mb-3 row">
        <div class="col">
            <h5 class="title">Tìm kiếm khách hàng</h5>
        </div>
        <div class="col-1">
            <button class="btn btn-clr-normal"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#searchCollapse"
                    aria-expanded="false"
                    aria-controls="searchCollapse">
                <i class="fa-solid fa-caret-down"></i>
            </button>
        </div>
    </div>
    <form id="searchCollapse" class="collapse create-form">
        <div class="row">
            <div class="col">
                <input type="text"
                       id="form6Example3"
                       class="form-control" />
                <label class="form-label" for="form6Example3">Tên khách hàng</label>
            </div>
        </div>
        <!-- Submit button -->
        <div class="col-2 mt-4">
            <button id="searchBtn"
                    type="submit"
                    class="btn btn-clr-normal btn-block mb-4 w-50">
                <i>Tìm</i>
            </button>
        </div>
    </form>
</div>
<!-- user List -->
<div class="main-content rounded-3 border border-2 py-4 px-3">
    <div class="table-header row">
        <div class="col-3">
            <h5 class="title">Quản lý khách hàng</h5>
            <p>sub title</p>
        </div>
    </div>
    <div class="text-white">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Customer
        </div>
        <div class="bg-white">
            <table class="table align-middle mb-0">
                <thead>
                    @*//Phần render*@
                    <tr>
                        <th>Loại</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Trạng thái</th>
                        <th>Khác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.User != null)
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.customer.LoaiKH</td>
                                <td>@user.customer.HoTen</td>
                                <td>@user.user.C_Email</td>
                                <td>@user.customer.DienThoai</td>
                                <td>@user.customer.DiaChi</td>
                                <td>
                                    @if (@user.user.C_is_Active == true)
                                    {
                                        <span class="btn text-bg-success py-2 w-75">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="btn text-bg-warning py-2 w-75">Đã bị khóa</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex flex-row gap-1">
                                        <a href="@Url.Action("Details", "User", new {id=@user.customer.ID})" class="nav-link">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
